{
  "name": "javobal-starter-api",
  "version": "1.0.0",
  "description": "API starter template",
  "main": "index.js",
  "scripts": {
    "dev": "concurrently \"tsc -w\" \"nodemon\" \"nodemon -x tsoa spec-and-routes\"",
    "build": "tsoa spec-and-routes && tsc"
  },
  "author": "Javier Balam",
  "license": "ISC",
  "nodemonConfig": {
    "exec": "node -r dotenv/config dist/index.js",
    "watch": [
      "dist"
    ]
  },
  "dependencies": {
    "express": "^4.17.1",
    "firebase-admin": "^9.11.0",
    "morgan": "^1.10.0",
    "swagger-ui-express": "^4.1.6",
    "tsoa": "^3.9.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.13",
    "@types/morgan": "^1.9.3",
    "@types/node": "^16.6.1",
    "@types/swagger-ui-express": "^4.1.3",
    "concurrently": "^6.2.1",
    "dotenv": "^10.0.0",
    "nodemon": "^2.0.12",
    "typescript": "^4.3.5"
  }
}
