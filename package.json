{
    "name": "javobal-starter-api",
    "version": "1.0.0",
    "description": "API starter template",
    "main": "index.js",
    "scripts": {
        "start": "concurrently \"tsc -w\" \"nodemon\" \"nodemon -x tsoa spec-and-routes\"",
        "build": "tsoa spec-and-routes && tsc",
        "test": "tsc && mocha dist/tests/spec.js",
        "test:watch": "concurrently \"tsc -w\" \"mocha --watch -r dotenv/config --reporter=spec dist/tests/**/*.spec.js\""
    },
    "author": "Javier Balam",
    "license": "ISC",
    "nodemonConfig": {
        "exec": "node -r dotenv/config dist/index.js",
        "watch": [
            "dist"
        ]
    },
    "dependencies": {
        "express": "^4.17.1",
        "firebase-admin": "^10.0.0",
        "mailgun-js": "^0.22.0",
        "morgan": "^1.10.0",
        "swagger-ui-express": "^4.1.6",
        "tsoa": "^3.14.1"
    },
    "devDependencies": {
        "@types/chai": "^4.2.22",
        "@types/chai-as-promised": "^7.1.4",
        "@types/express": "^4.17.13",
        "@types/mailgun-js": "^0.22.12",
        "@types/mocha": "^9.0.0",
        "@types/morgan": "^1.9.3",
        "@types/node": "^16.6.1",
        "@types/sinon": "^10.0.6",
        "@types/swagger-ui-express": "^4.1.3",
        "chai": "^4.3.4",
        "chai-as-promised": "^7.1.1",
        "concurrently": "^6.4.0",
        "dotenv": "^10.0.0",
        "mocha": "^9.1.3",
        "nodemon": "^2.0.15",
        "prettier": "^2.4.1",
        "sinon": "^12.0.1",
        "typescript": "^4.5.2"
    }
}
